{{!-- Dice Rolling Configuration Settings --}}
<div class="dice-rolling-application">
  {{!-- Dice Rolling Method Selection --}}
  <div class="form-group">
    <h3 id="dice-method-header">{{localize 'hm.settings.dice-rolling-method.name'}}</h3>
    <div class="dice-method-options" role="group" aria-labelledby="dice-method-header">
      <label>
        <input type="checkbox" id="standardArray" name="standardArray"
          {{#if allowedMethods.standardArray}}checked{{/if}}
          aria-label="{{localize 'hm.settings.dice-rolling-method.standard-array'}}">
        <span>{{localize 'hm.settings.dice-rolling-method.standard-array'}}</span>
      </label>
      <label>
        <input type="checkbox" id="manual" name="manual" {{#if allowedMethods.manual}}checked{{/if}}
          aria-label="{{localize 'hm.settings.dice-rolling-method.manual-formula'}}">
        <span>{{localize 'hm.settings.dice-rolling-method.manual-formula'}}</span>
      </label>
      <label>
        <input type="checkbox" id="pointBuy" name="pointBuy" {{#if allowedMethods.pointBuy}}checked{{/if}}
          aria-label="{{localize 'hm.settings.dice-rolling-method.point-buy'}}">
        <span>{{localize 'hm.settings.dice-rolling-method.point-buy'}}</span>
      </label>
    </div>
    <p class="hint" id="dice-method-hint" aria-hidden="true">{{localize 'hm.settings.dice-rolling-method.hint'}}</p>
  </div>

  {{!-- Ability Score Limits Configuration --}}
  <div class="form-group">
    <h3 id="ability-scores-header">{{localize 'hm.settings.ability-scores.header'}}</h3>

    <div class="ability-scores-container" role="group" aria-labelledby="ability-scores-header">
      <label>{{localize 'hm.settings.ability-scores.min.name'}}</label>
      <label>{{localize 'hm.settings.ability-scores.default.name'}}</label>
      <label>{{localize 'hm.settings.ability-scores.max.name'}}</label>

      <div>
        <input type="number" id="abilityScoreMin" name="abilityScoreMin" class="form-input" value="{{abilityScoreMin}}"
          min="3" max="18" step="1" aria-label="{{localize 'hm.settings.ability-scores.min.name'}}"
          aria-describedby="ability-score-min-hint">
        <i class="fa-solid fa-circle-info tooltip-icon" aria-hidden="true"
          data-tooltip="{{localize 'hm.settings.ability-scores.min.hint'}}"></i>
        <span id="ability-score-min-hint" class="sr-only">{{localize 'hm.settings.ability-scores.min.hint'}}</span>
      </div>

      <div>
        <input type="number" id="abilityScoreDefault" name="abilityScoreDefault" class="form-input"
          value="{{abilityScoreDefault}}" min="3" max="20" step="1"
          aria-label="{{localize 'hm.settings.ability-scores.default.name'}}"
          aria-describedby="ability-score-default-hint">
        <i class="fa-solid fa-circle-info tooltip-icon" aria-hidden="true"
          data-tooltip="{{localize 'hm.settings.ability-scores.default.hint'}}"></i>
        <span id="ability-score-default-hint"
          class="sr-only">{{localize 'hm.settings.ability-scores.default.hint'}}</span>
      </div>

      <div>
        <input type="number" id="abilityScoreMax" name="abilityScoreMax" class="form-input" value="{{abilityScoreMax}}"
          min="10" max="20" step="1" aria-label="{{localize 'hm.settings.ability-scores.max.name'}}"
          aria-describedby="ability-score-max-hint">
        <i class="fa-solid fa-circle-info tooltip-icon" aria-hidden="true"
          data-tooltip="{{localize 'hm.settings.ability-scores.max.hint'}}"></i>
        <span id="ability-score-max-hint" class="sr-only">{{localize 'hm.settings.ability-scores.max.hint'}}</span>
      </div>
    </div>
  </div>

  {{!-- Custom Standard Array Configuration --}}
  <div class="form-group">
    <label for="customStandardArray">{{localize 'hm.settings.custom-standard-array.name'}}</label>
    <div>
      <input type="text" id="customStandardArray" name="customStandardArray" class="form-input"
        value="{{customStandardArray}}" aria-describedby="custom-standard-array-hint" />
    </div>
    <p class="hint" id="custom-standard-array-hint" aria-hidden="true">
      {{localize 'hm.settings.custom-standard-array.hint'}}</p>
  </div>

  {{!-- Swap mode for Stat Generation --}}
  <div class="form-group">
    <div>
      <input type="checkbox" name="statGenerationSwapMode" id="statGenerationSwapMode" class="form-input"
        {{checked statGenerationSwapMode}} aria-labelledby="stat-generation-swap-mode-label" />
      <label id="stat-generation-swap-mode-label" for="statGenerationSwapMode">{{localize 'hm.settings.stat-generation-swap-mode.name'}}</label>
    </div>
    <p class="hint" id="stat-generation-swap-mode-hint" aria-hidden="true">
      {{localize 'hm.settings.stat-generation-swap-mode.hint'}}</p>
  </div>

  {{!-- Custom Roll Formula Configuration --}}
  <div class="form-group">
    <label for="customRollFormula">{{localize 'hm.settings.custom-roll-formula.name'}}</label>
    <div>
      <input type="text" id="customRollFormula" name="customRollFormula" class="form-input"
        value="{{customRollFormula}}" aria-describedby="custom-roll-formula-hint" />
    </div>
    <p class="hint" id="custom-roll-formula-hint" aria-hidden="true">{{localize 'hm.settings.custom-roll-formula.hint'}}
    </p>
  </div>

  {{!-- Custom Point Buy Total Configuration --}}
  <div class="form-group">
    <label for="customPointBuyTotal">{{localize "hm.settings.custom-point-buy-total.name"}}</label>
    <div>
      <input type="number" id="customPointBuyTotal" name="customPointBuyTotal" class="form-input"
        value="{{customPointBuyTotal}}" aria-describedby="custom-point-buy-total-hint" />
    </div>
    <p class="hint" id="custom-point-buy-total-hint" aria-hidden="true">
      {{localize "hm.settings.custom-point-buy-total.hint"}}</p>
  </div>

  {{!-- Chained Rolls Option --}}
  <div class="form-group">
    <div>
      <input type="checkbox" id="chainedRolls" name="chainedRolls" {{#if chainedRolls}}checked{{/if}}
        aria-labelledby="chained-rolls-label" />
      <label id="chained-rolls-label" for="chainedRolls">{{localize 'hm.settings.chained-rolls.name'}}</label>
    </div>
    <p class="hint" id="chained-rolls-hint" aria-hidden="true">{{localize 'hm.settings.chained-rolls.hint'}}</p>
  </div>

  {{!-- Roll Delay Configuration --}}
  <div class="form-group">
    <label for="rollDelay">{{localize 'hm.settings.roll-delay.name'}}</label>
    <div class="delay-control">
      <input type="range" id="rollDelay" name="rollDelay" value="{{rollDelay}}" min="100" max="2000" step="100"
        aria-valuemin="100" aria-valuemax="2000" aria-valuenow="{{rollDelay}}" aria-describedby="roll-delay-hint"
        aria-labelledby="delay-value" />
      <span id="delay-value" class="delay-value">{{rollDelay}}ms</span>
    </div>
    <p class="hint" id="roll-delay-hint" aria-hidden="true">{{localize 'hm.settings.roll-delay.hint'}}</p>
  </div>
</div>
