{{!-- Custom Compendiums Management Form --}}
<form>
  <p>{{localize 'hm.settings.custom-compendiums.description'}}</p>

  {{!-- Classes Section --}}
  <div class="hm-compendiums-popup-section">
    <p id="class-label">{{localize 'hm.settings.custom-compendiums.classes-label'}}</p>
    <button type="button" data-action="classes" aria-labelledby="class-label"
      aria-label="{{localize 'hm.settings.custom-compendiums.manage-classes'}}">
      <span>{{localize 'hm.settings.custom-compendiums.manage-classes'}}</span>
    </button>
  </div>

  {{!-- Races Section --}}
  <div class="hm-compendiums-popup-section">
    <p id="race-label">{{localize 'hm.settings.custom-compendiums.races-label'}}</p>
    <button type="button" data-action="races" aria-labelledby="race-label"
      aria-label="{{localize 'hm.settings.custom-compendiums.manage-races'}}">
      <span>{{localize 'hm.settings.custom-compendiums.manage-races'}}</span>
    </button>
  </div>

  {{!-- Backgrounds Section --}}
  <div class="hm-compendiums-popup-section">
    <p id="background-label">{{localize 'hm.settings.custom-compendiums.backgrounds-label'}}</p>
    <button type="button" data-action="backgrounds" aria-labelledby="background-label"
      aria-label="{{localize 'hm.settings.custom-compendiums.manage-backgrounds'}}">
      <span>{{localize 'hm.settings.custom-compendiums.manage-backgrounds'}}</span>
    </button>
  </div>

  {{!-- Items Section --}}
  <div class="hm-compendiums-popup-section">
    <p id="item-label">{{localize 'hm.settings.custom-compendiums.items-label'}}</p>
    <button type="button" data-action="items" aria-labelledby="item-label"
      aria-label="{{localize 'hm.settings.custom-compendiums.manage-items'}}">
      <span>{{localize 'hm.settings.custom-compendiums.manage-items'}}</span>
    </button>
  </div>
</form>
