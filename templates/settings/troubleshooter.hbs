{{!-- Troubleshooter Interface for Diagnostics and Support --}}
<div class="hm-troubleshooter-container">
	<p class="notes">{{localize "hm.settings.troubleshooter.notes"}}</p>

	{{!-- Diagnostic Output Display --}}
	<textarea id="troubleshooter-output" rows="25" cols="80" readonly>{{output}}</textarea>

	{{!-- Action Buttons --}}
	<div class="troubleshooter-buttons">
		{{!-- Export Report Button --}}
		<button type="button" data-action="exportReport"
			aria-label="{{localize "hm.settings.troubleshooter.save-to-file"}}">
			<i class="fa-solid fa-download" aria-hidden="true"></i> {{localize "hm.settings.troubleshooter.save-to-file"}}
		</button>

		{{!-- Copy to Clipboard Button --}}
		<button type="button" data-action="copyToClipboard"
			aria-label="{{localize "hm.settings.troubleshooter.copy-to-clipboard"}}">
			<i class="fa-solid fa-copy" aria-hidden="true"></i> {{localize "hm.settings.troubleshooter.copy-to-clipboard"}}
		</button>

		{{!-- Discord Support Button --}}
		<button type="button" data-action="openDiscord" aria-label="{{localize "hm.settings.troubleshooter.discord"}}">
			<i class="fa-brands fa-discord" aria-hidden="true"></i> {{localize "hm.settings.troubleshooter.discord"}}
		</button>

		{{!-- GitHub Issues Button --}}
		<button type="button" data-action="openGithub" aria-label="{{localize "hm.settings.troubleshooter.github"}}">
			<i class="fa-brands fa-github-alt" aria-hidden="true"></i> {{localize "hm.settings.troubleshooter.github"}}
		</button>
	</div>
</div>
