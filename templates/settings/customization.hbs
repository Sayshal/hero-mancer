<div class='customization-application flex flex-col m-lr overflow-y-auto pr-sm text-left'>
	<div class="form-group flex flex-col items-start">
		<div class="flex items-center">
			<input type='checkbox' name='enableRandomize' {{#if enableRandomize}}checked{{/if}} />
			<label class="font-bold">{{localize 'hm.settings.randomize.name'}}</label>
		</div>
		<p class='hint'>{{localize 'hm.settings.randomize.hint'}}</p>
	</div>

	<div class="form-group flex flex-col items-start">
		<div class="flex items-center">
			<input type='checkbox' name='enablePlayerCustomization' {{#if enablePlayerCustomization}}checked{{/if}} />
			<label class="font-bold">{{localize 'hm.settings.player-customization.name'}}</label>
		</div>
		<p class='hint'>{{localize 'hm.settings.player-customization.hint'}}</p>
	</div>

	<div class="form-group flex flex-col items-start">
		<div class="flex items-center">
			<input type='checkbox' name='enableTokenCustomization' {{#if enableTokenCustomization}}checked{{/if}} />
			<label class="font-bold">{{localize 'hm.settings.token-customization.name'}}</label>
		</div>
		<p class='hint'>{{localize 'hm.settings.token-customization.hint'}}</p>
	</div>
	<!-- Character Appearance Options -->
	<div class="form-group flex flex-col items-start">
		<label class="font-bold">{{localize 'hm.settings.appearance-options.header'}}</label>

		<div class="form-group flex flex-col items-start">
			<label class="font-bold">{{localize 'hm.settings.alignments.name'}}</label>
			<div class="flex items-center">
				<input type='text' name='alignments' class="form-input" value='{{alignments}}' />
			</div>
			<p class='hint'>{{localize 'hm.settings.alignments.hint'}}</p>
		</div>

		<div class="form-group flex flex-col items-start">
			<label class="font-bold">{{localize 'hm.settings.deities.name'}}</label>
			<div class="flex items-center">
				<input type='text' name='deities' class="form-input" value='{{deities}}' />
			</div>
			<p class='hint'>{{localize 'hm.settings.deities.hint'}}</p>
		</div>

		<div class="form-group flex flex-col items-start">
			<label class="font-bold">{{localize 'hm.settings.eye-colors.name'}}</label>
			<div class="flex items-center">
				<input type='text' name='eye-colors' class="form-input" value='{{eye-colors}}' />
			</div>
			<p class='hint'>{{localize 'hm.settings.eye-colors.hint'}}</p>
		</div>

		<div class="form-group flex flex-col items-start">
			<label class="font-bold">{{localize 'hm.settings.hair-colors.name'}}</label>
			<div class="flex items-center">
				<input type='text' name='hair-colors' class="form-input" value='{{hair-colors}}' />
			</div>
			<p class='hint'>{{localize 'hm.settings.hair-colors.hint'}}</p>
		</div>

		<div class="form-group flex flex-col items-start">
			<label class="font-bold">{{localize 'hm.settings.skin-tones.name'}}</label>
			<div class="flex items-center">
				<input type='text' name='skin-tones' class="form-input" value='{{skin-tones}}' />
			</div>
			<p class='hint'>{{localize 'hm.settings.skin-tones.hint'}}</p>
		</div>

		<div class="form-group flex flex-col items-start">
			<label class="font-bold">{{localize 'hm.settings.genders.name'}}</label>
			<div class="flex items-center">
				<input type='text' name='genders' class="form-input" value='{{genders}}' />
			</div>
			<p class='hint'>{{localize 'hm.settings.genders.hint'}}</p>
		</div>
	</div>

	<!-- Customization Options -->
	<div class="form-group flex flex-col items-start">
		<label class="font-bold">{{localize 'hm.settings.character-options.header'}}</label>

		<div class="form-group flex flex-col items-start">
			<label class="font-bold">{{localize 'hm.settings.art-picker-root.name'}}</label>
			<div class="flex items-center">
				<input type='text' name='artPickerRoot' class="form-input" value='{{artPickerRoot}}' data-dtype="String"
					data-type="folder" />
				<button type="button" class="file-picker" data-action="selectArtPickerRoot" data-type="folder"
					data-target="artPickerRoot" title="Browse Folders">
					<i class="fas fa-file-import fa-fw"></i>
				</button>
			</div>
			<p class='hint'>{{localize 'hm.settings.art-picker-root.hint'}}</p>
		</div>
	</div>
</div>
