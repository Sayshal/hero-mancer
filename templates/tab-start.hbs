{{!-- Start Tab - Initial Character Setup --}}
<div class="tab {{ tabs.start.cssClass }}" data-tab="start" data-group="hero-mancer-tabs" role="tabpanel"
  id="start-panel" aria-labelledby="tab-start">
    {{!-- Introduction --}}
    {{{localize 'hm.app.start.preamble.text'}}}

    {{!-- Player Settings --}}
    <fieldset>
      <legend>{{localize 'hm.app.start.player-settings'}}</legend>

      <div class="form-group" id="character-name-row">
        <label for="character-name">{{localize 'hm.app.start.name-label'}}</label>
        <div class="form-fields">
          <input id="character-name" type="text" name="character-name"
            placeholder="{{localize 'hm.app.start.name-placeholder'}}" aria-required="true" />
          <button data-action="randomizeCharacterName" type="button"
            data-tooltip="{{localize 'hm.app.start.generate-random-name'}}"
            aria-label="{{localize 'hm.app.start.generate-random-name'}}">
            <i class="fa-solid fa-shuffle" aria-hidden="true"></i>
          </button>
        </div>
      </div>

      {{#if isGM}}
        <div class="form-group">
          <label for="player-assignment">{{localize 'hm.app.start.player-assignment-label'}}</label>
          <div class="form-fields">
            <select id="player-assignment" name="player">
              <option value="">{{localize 'hm.app.start.player-assignment-placeholder'}}</option>
              {{#each players}}
                <option value="{{this.id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
      {{/if}}

      <div class="form-group">
        <label for="character-art-path">{{localize 'hm.app.start.character-art-label'}}</label>
        <div class="form-fields">
          <input id="character-art-path" type="text" name="character-art" readonly
            placeholder="{{localize 'hm.app.start.character-art-placeholder'}}" />
          <button data-action="selectCharacterArt" type="button"
            aria-label="{{localize 'hm.app.start.select-art'}}">
            {{localize 'hm.app.start.select-art'}}
          </button>
        </div>
      </div>

      <div class="form-group">
        <label for="link-token-art">{{localize 'hm.app.start.token-same-as-character'}}</label>
        <div class="form-fields">
          <input type="checkbox" id="link-token-art" checked />
        </div>
      </div>

      <div class="form-group" id="token-art-row" style="display: none">
        <label for="token-art-path">{{localize 'hm.app.start.token-art-label'}}</label>
        <div class="form-fields">
          <input id="token-art-path" type="text" name="token-art" readonly
            placeholder="{{localize 'hm.app.start.token-art-placeholder'}}" />
          <button data-action="selectTokenArt" type="button"
            aria-label="{{localize 'hm.app.start.select-art'}}">
            {{localize 'hm.app.start.select-art'}}
          </button>
        </div>
      </div>

      {{#if playerCustomizationEnabled}}
        <div class="form-group" id="color-row">
          <label for="player-color">{{localize 'hm.app.start.player-color'}}</label>
          <div class="form-fields">
            <color-picker id="player-color" name="player-color" value="#FF0000"
              aria-label="{{localize 'hm.app.start.player-color'}}" />
          </div>
        </div>
        <div class="form-group" id="pronoun-row">
          <label for="player-pronouns">{{localize 'hm.app.start.player-pronouns'}}</label>
          <div class="form-fields">
            <input id="player-pronouns" type="text" name="player-pronouns"
              placeholder="{{localize 'hm.app.start.player-pronouns-placeholder'}}" />
          </div>
        </div>
        <div class="form-group" id="avatar-row">
          <label for="player-avatar-path">{{localize 'hm.app.start.player-avatar'}}</label>
          <div class="form-fields">
            <input id="player-avatar-path" type="text" name="player-avatar" readonly
              placeholder="{{localize 'hm.app.start.player-avatar-placeholder'}}" />
            <button data-action="selectPlayerAvatar" type="button"
              aria-label="{{localize 'hm.app.start.player-avatar-placeholder'}}">
              {{localize 'hm.app.start.select-art'}}
            </button>
          </div>
        </div>
      {{/if}}
    </fieldset>

    {{!-- Token Settings --}}
    {{#if tokenCustomizationEnabled}}
      <fieldset>
        <legend>{{localize 'hm.app.start.token-settings'}}</legend>

        <div class="form-group">
        <label for="displayName">{{localize "TOKEN.FIELDS.displayName.label"}}</label>
        <div class="form-fields">
          <select id="displayName" name="displayName">
            <option value="">{{localize "hm.app.start.token-visibility-placeholder"}}</option>
            {{selectOptions token.displayModes selected=object.displayName}}
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="displayBars">{{localize "TOKEN.FIELDS.displayBars.label"}}</label>
        <div class="form-fields">
          <select id="displayBars" name="displayBars">
            <option value="">{{localize "hm.app.start.token-visibility-placeholder"}}</option>
            {{selectOptions token.barModes selected=object.displayBars}}
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="bar1-attribute">{{localize "TOKEN.FIELDS.bar1.attribute.label"}}</label>
        <div class="form-fields">
          <select id="bar1-attribute" name="bar1.attribute">
            {{selectOptions token.barAttributes selected=object.bar1.attribute}}
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="bar2-attribute">{{localize "TOKEN.FIELDS.bar2.attribute.label"}}</label>
        <div class="form-fields">
          <select id="bar2-attribute" name="bar2.attribute">
            {{selectOptions token.barAttributes selected=object.bar2.attribute}}
          </select>
        </div>
      </div>

      <div class="form-group">
        <label for="ring-enabled">{{localize "TOKEN.FIELDS.ring.enabled.label"}}</label>
        <div class="form-fields">
          <input id="ring-enabled" type="checkbox" name="ring.enabled" {{checked object.ring.enabled}} />
        </div>
      </div>

      <div class="form-group">
        <label for="ring-color">{{localize "TOKEN.FIELDS.ring.colors.ring.label"}}</label>
        <div class="form-fields">
          <color-picker id="ring-color" name="ring.color" value=""
            aria-label="{{localize 'TOKEN.FIELDS.ring.colors.ring.label'}}" />
        </div>
      </div>

      <div class="form-group">
        <label for="background-color">{{localize "TOKEN.FIELDS.ring.colors.background.label"}}</label>
        <div class="form-fields">
          <color-picker id="background-color" name="backgroundColor"
            value="{{ object.backgroundColor }}" aria-label="{{localize 'DND5E.TokenRings.BackgroundColor'}}" />
        </div>
      </div>

      <div class="form-group ring-effects">
        <label>{{localize 'TOKEN.FIELDS.ring.effects.label'}}</label>
        <div class="form-fields" role="group" aria-label="{{localize 'TOKEN.FIELDS.ring.effects.label'}}">
          {{#each token.ring.effects as |label key|}}
            <label class="checkbox">
              <input type="checkbox" id="ring-effect-{{key}}" name="ring.effects" value="{{key}}"
                {{checked (lookup ../object.ring.effects key)}} />
              {{ label }}
            </label>
          {{/each}}
        </div>
      </div>
      </fieldset>
    {{/if}}
</div>
