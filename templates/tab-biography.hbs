{{!-- Biography Tab - Character Details and Story --}}
<div class='tab {{tabs.biography.cssClass}}' data-tab='biography' data-group='hero-mancer-tabs'>
	<fieldset>
		<legend>{{localize 'hm.app.biography.tooltip'}}</legend>

		{{!-- Characteristics Section --}}
		<section class='characteristics-section first-section'>
			<h2>{{localize 'hm.app.biography.characteristics'}}</h2>

			{{!-- First Row - 5 columns --}}
			<div class='grid grid-5-col gap-md mb-md'>
				<div class='form-group items-center'>
					<label for="alignment">{{localize 'DND5E.Alignment'}}<i class="fa-solid fa-circle-info tooltip-icon"
							data-tooltip="{{localize 'hm.app.biography.alignment-hint'}}"></i></label>
					<select id="alignment" name='alignment' class="form-select">
						<option value=''>{{localize 'None'}}</option>
						{{#each alignments}}
							<option value='{{this}}'>{{this}}</option>
						{{/each}}
					</select>
				</div>
				<div class='form-group items-center'>
					<label for="gender">{{localize 'DND5E.Gender'}}</label>
					<input id="gender" type='text' name='gender' class="form-input" />
				</div>
				<div class='form-group items-center'>
					<label for="eyes">{{localize 'DND5E.Eyes'}}</label>
					<input id="eyes" type='text' name='eyes' class="form-input" />
				</div>
				<div class='form-group items-center'>
					<label for="size">{{localize 'DND5E.Size'}}<i class="fa-solid fa-circle-info tooltip-icon"
							data-tooltip="{{localize 'hm.app.biography.size-hint'}}"></i></label>
					<input id="size" type='text' name='size' class="form-input" disabled
						placeholder='{{localize "hm.app.biography.size-placeholder"}}' />
				</div>
				<div class='form-group items-center'>
					<label for="height">{{localize 'DND5E.Height'}}<i class="fa-solid fa-circle-info tooltip-icon"
							data-tooltip="{{localize 'hm.app.biography.height-hint'}}"></i></label>
					<input id="height" type='text' name='height' class="form-input" />
				</div>
			</div>

			{{!-- Second Row - 5 columns --}}
			<div class='grid grid-5-col gap-md mb-md'>
				<div class='form-group items-center'>
					<label for="faith">{{localize 'DND5E.Faith'}}<i class="fa-solid fa-circle-info tooltip-icon"
							data-tooltip="{{localize 'hm.app.biography.faith-hint'}}"></i></label>
					<select id="faith" name='faith' class="form-select">
						<option value=''>{{localize 'None'}}</option>
						{{#each deities}}
							<option value='{{this}}'>{{this}}</option>
						{{/each}}
					</select>
				</div>
				<div class='form-group items-center'>
					<label for="hair">{{localize 'DND5E.Hair'}}</label>
					<input id="hair" type='text' name='hair' class="form-input" />
				</div>
				<div class='form-group items-center'>
					<label for="skin">{{localize 'DND5E.Skin'}}</label>
					<input id="skin" type='text' name='skin' class="form-input" />
				</div>
				<div class='form-group items-center'>
					<label for="age">{{localize 'DND5E.Age'}}<i class="fa-solid fa-circle-info tooltip-icon"
							data-tooltip="{{localize 'hm.app.biography.age-hint'}}"></i></label>
					<input id="age" type='text' name='age' class="form-input" />
				</div>
				<div class='form-group items-center'>
					<label for="weight">{{localize 'DND5E.Weight'}}<i class="fa-solid fa-circle-info ml-xs tooltip-icon"
							data-tooltip="{{localize 'hm.app.biography.weight-hint'}}"></i></label>
					<input id="weight" type='text' name='weight' class="form-input" />
				</div>
			</div>
		</section>

		{{!-- Personal Characteristics Section - 2x2 Grid --}}
		<section class='personality-section'>
			<div class='grid grid-2-col gap-md'>
				<div class='personality-group'>
					<div class='input-with-roll'>
						<div class='flex justify-between items-center mb-sm'>
							<label for="traits">{{localize 'hm.app.biography.personality-traits'}}<i
									class="fa-solid fa-circle-info ml-xs tooltip-icon"
									data-tooltip="{{localize 'hm.app.biography.traits-placeholder-alt'}}"></i></label>
							<button type='button' class='roll-btn button-7' data-table='traits'>
								<i class='fas fa-dice'></i> {{localize 'DND5E.Roll'}}
							</button>
						</div>
						<textarea id="traits" name='traits' class="w-full" rows="4"
							placeholder='{{localize "hm.app.biography.traits-placeholder"}}'></textarea>
					</div>
				</div>
				<div class='personality-group'>
					<div class='input-with-roll'>
						<div class='flex justify-between items-center mb-sm'>
							<label for="ideals">{{localize 'DND5E.Ideals'}}<i class="fa-solid fa-circle-info ml-xs tooltip-icon"
									data-tooltip="{{localize 'hm.app.biography.ideals-placeholder-alt'}}"></i></label>
							<button type='button' class='roll-btn button-7' data-table='ideals'>
								<i class='fas fa-dice'></i> {{localize 'DND5E.Roll'}}
							</button>
						</div>
						<textarea id="ideals" name='ideals' class="w-full" rows="4"
							placeholder='{{localize "hm.app.biography.ideals-placeholder"}}'></textarea>
					</div>
				</div>
				<div class='personality-group'>
					<div class='input-with-roll'>
						<div class='flex justify-between items-center mb-sm'>
							<label for="bonds">{{localize 'DND5E.Bonds'}}<i class="fa-solid fa-circle-info ml-xs tooltip-icon"
									data-tooltip="{{localize 'hm.app.biography.bonds-placeholder-alt'}}"></i></label>
							<button type='button' class='roll-btn button-7' data-table='bonds'>
								<i class='fas fa-dice'></i> {{localize 'DND5E.Roll'}}
							</button>
						</div>
						<textarea id="bonds" name='bonds' class="w-full" rows="4"
							placeholder='{{localize "hm.app.biography.bonds-placeholder"}}'></textarea>
					</div>
				</div>
				<div class='personality-group'>
					<div class='input-with-roll'>
						<div class='flex justify-between items-center mb-sm'>
							<label for="flaws">{{localize 'DND5E.Flaws'}}<i class="fa-solid fa-circle-info ml-xs tooltip-icon"
									data-tooltip="{{localize 'hm.app.biography.flaws-placeholder-alt'}}"></i></label>
							<button type='button' class='roll-btn button-7' data-table='flaws'>
								<i class='fas fa-dice'></i> {{localize 'DND5E.Roll'}}
							</button>
						</div>
						<textarea id="flaws" name='flaws' class="w-full" rows="4"
							placeholder='{{localize "hm.app.biography.flaws-placeholder"}}'></textarea>
					</div>
				</div>
			</div>
		</section>

		{{!-- Physical Description Section --}}
		<section class='physical-description-section mb-md'>
			<h2>{{localize 'hm.app.biography.physical-description'}}<i
					class="fa-solid fa-circle-info ml-xs tooltip-icon heading-tooltip"
					data-tooltip="{{localize 'hm.app.biography.description-hint'}}"></i></h2>
			<textarea id="appearance" name='appearance' class="w-full" rows='4'></textarea>
		</section>

		{{!-- Backstory Section --}}
		<section class='notes-section'>
			<h2>{{localize 'hm.app.biography.backstory'}}<i class="fa-solid fa-circle-info ml-xs tooltip-icon heading-tooltip"
					data-tooltip="{{localize 'hm.app.biography.backstory-hint'}}"></i></h2>
			<div class='notes-group'>
				<prose-mirror id="backstory" name='backstory'
					data-placeholder='{{localize "hm.app.biography.backstory-placeholder"}}'>
				</prose-mirror>
			</div>
		</section>
	</fieldset>
</div>
