{{!-- Race Selection Tab --}}
<div class='tab {{tabs.race.cssClass}}' data-tab='race' data-group='hero-mancer-tabs'>
  <fieldset>
    <legend>{{localize 'hm.app.race.tooltip'}}</legend>
    <p>{{localize 'hm.app.race.preamble'}}</p>
    <hr />

    {{!-- Race Dropdown Selection --}}
    <div class="form-row flex items-center gap-sm mb-sm">
      <label for='race-dropdown'>{{localize 'hm.app.race.select-label'}}</label>
      <select id='race-dropdown' name='race' class="form-select" data-dtype='String' aria-describedby='race-description'
        aria-label='{{localize "hm.app.race.select-label"}}'>
        <option value=''>{{localize 'hm.app.race.select-placeholder'}}</option>

        {{#each raceDocs}}
          {{#if this.folderName}}
            <optgroup label='{{this.folderName}}'>
              {{#each this.docs}}
                <option value='{{this.id}} ({{this.packId}}) [{{this.uuid}}]'>
                  {{this.name}}
                  ({{this.packName}})
                </option>
              {{/each}}
            </optgroup>
          {{else}}
            <option value='{{this.id}}'>
              {{this.name}}
              ({{this.packName}})
            </option>
          {{/if}}
        {{else}}
          <option>{{localize 'hm.app.race.none'}}</option>
        {{/each}}
      </select>
    </div>

    {{!-- Race Description Display --}}
    <div id='race-description' class="overflow-vert-only" role='region' aria-live='polite' aria-atomic='true'>
      <div class="journal-container dnd5e2-journal" data-journal-id="{{journalPageId}}"></div>
    </div>
  </fieldset>
</div>
